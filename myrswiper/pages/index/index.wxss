/**index.wxss**/

.myview{
  position: absolute;
  top:800rpx;

  width:100rpx;
  height:100rpx;
  background-color: red;
  transition:2s;

}
.change{
  opacity:0.5;
  transform: translateX(200rpx) scale(1.5,1.5);
}
/*父级标签，主要用于定位*/

.parent {
  position: relative;
  top: 0;
  left: 10%;
  width: 80%;
}

.child {
  position: absolute;
  width: 600rpx;
  height: 400rpx;
  transform:translateX(100rpx) rotateY(80deg) scale(2,2);
}

.child-img {
  width: 100%;
  height: 100%;
}
